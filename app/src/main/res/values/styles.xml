<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Login Activity UI styles -->
    <style name="LoginUI" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/LoginUI.Button</item>
    </style>

    <style name="LoginUI.Button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="LoginUI.Button.AuthChooser">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:typeface">normal</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="LoginUI.Button.AuthChooser.EmailButton">
        <item name="android:background">@drawable/idp_button_background_email</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="LoginUI.Button.AuthChooser.GoogleButton">
        <item name="android:background">@drawable/idp_button_background_google</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="LoginUI.Button.AuthChooser.FacebookButton">
        <item name="android:background">@drawable/idp_button_background_facebook</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="AppTheme.WrapperStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.Design.TextInputLayout" />

    <style name="AppTheme.TextInputLayout.EmailField">
        <item name="android:hint">@string/hint_email</item>
    </style>

    <style name="AppTheme.TextInputLayout.PasswordField">
        <item name="android:hint">@string/hint_password</item>
    </style>

    <style name="AppTheme.TextInputLayout.NameField">
        <item name="android:hint">@string/hint_name</item>
    </style>

    <style name="AppTheme.TextInputLayout.SurnameField">
        <item name="android:hint">@string/hint_surname</item>
    </style>

    <style name="AppTheme.TextInputEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.TextInputEditText.EmailField">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="AppTheme.TextInputEditText.PasswordField">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="AppTheme.TextInputEditText.NameField">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="AppTheme.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.Text.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="AppTheme.Text.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="AppTheme.Text.Link">
        <item name="android:textColor">#4285F4</item>
    </style>

</resources>
